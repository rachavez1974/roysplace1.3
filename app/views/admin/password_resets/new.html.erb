<% provide(:title, "Forgot password") %>
<br><br>
<div class="form-gap"></div>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="text-center">
        <h3><i class="fa fa-lock fa-4x"></i></h3>
        <h2 class="text-center">Forgot Password?</h2>
        <p>You can reset your password here.</p>
        <div class="panel-body">

          <%= form_for(:password_reset, url: admin_password_resets_path, html: {class: "form", id: "register-form"}) do |f| %>
          <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                <%= f.email_field :email, placeholder: "Type your email here",  class: 'form-control' %>
              </div>
            </div>
        <div class="form-group">
          <%= f.submit "Reset Password  ", class: "btn btn-lg btn-primary btn-block" %>
        </div>
          <% end %>                   

        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>











