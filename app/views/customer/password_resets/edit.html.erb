<% provide(:title, 'Reset password') %>
<h1>Welcome back to Roy's Place <%= @user.first_name %></h1>
<h1 style="padding-left: 10px;">Reset password</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= simple_form_for(@user, url: customer_password_reset_path(params[:id])) do |f| %>
      <%= f.error_notification %>
      <%= hidden_field_tag :email, @user.email %>

      <%= f.input :password, placeholder:  "Type password here.", class: 'form-control' %>
      <input type="checkbox" onclick="showMyPassword('user_password')">Show Password
      <div class="clearfix"></div>  
      
      <%= f.input :password_confirmation, placeholder: "Type password confirmation here.", class: 'form-control' %>
      <input type="checkbox" onclick="showMyPassword('user_password_confirmation')">Show Password
      <div class="clearfix"></div>
      <br>

      <%= f.submit "Update password", class: "btn btn-primary" %>
    <% end %>
    <br><br>
  </div>
</div>
