<% provide(:title, "Customer_Login Form") %>
<% provide(:path, customer_login_path ) %>
<div class="container-login">
  <div class="row">
    <div class="col-md-12">
      <div class="pr-wrap">
        <div class="pass-reset">
          <label>
          Enter the email you signed up with</label>
          <input type="email" placeholder="Email" />
          <input type="submit" value="Submit" class="pass-reset-submit btn btn-success btn-sm" />
        </div>
      </div>
      <div class="wrap">
        <p class="form-title">
        Sign In</p>

        <%= form_for(:session, url: customer_login_path,  html: {class: "login"}) do |f| %>    
        <%= f.label :email  %>
        <%= f.text_field :email, placeholder: "Type your email here", class: 'form-control' %>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Type your password here", class: 'form-control' %>

        <div class="row">
          <div class="col-md-6">
            <%= f.check_box :remember_me %>
            <label><%= f.label :remember_me %></label> 
          </div>
          <label>
            <input type="checkbox" onclick="showMyPassword('session_password')">Show Password</label>  

          </div>

          
          <%= f.submit "Log-In", class: "btn btn-success btn-sm"%>
          
          <div class="remember-forgot">
            <div class="row">
              <div class="col-md-6 forgot-pass-content">
                <%= link_to "(forgot password)", new_customer_password_reset_path, class: 'forgot-pass' %>
              </div>
            </div>

          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>  
</div>
